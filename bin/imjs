#!/usr/bin/env node

var imjs = require('../lib/imjs');
var cmd = require('../lib/commands');
var program = require('commander');

program
  .version('0.0.1')
  .option('-o, --output [dest]', 'Specify output destination');

program
  .command('resize')
  .description('resize images')
  .action(function(src, dest, w, h, q) {
    cmd.resize(src, dest, w, h, q);
  });

program
  .command('resizein')
  .description('output resized files in the specified directory')
  .action(function(src, dest, w, h, q) {
    imjs.resizeIn(src, dest, w, h, q);
  });

program
  .command('watermark')
  .description('watermark images')
  .action(function(src, dest, type ) {
    cmd.watermark(src, dest, type);
  });

program.parse(process.argv);
